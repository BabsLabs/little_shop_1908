<% @items.each do |item| %>
  <section id= 'item-<%=item.id%>'>
    <h2> <%= item.name %> </h2>
    <img src= <%= item.image %>>
    <p> <%= item.description %> </p>
    <p>Price: $<%= item.price %> </p>
    <p>Inventory: <%= item.inventory %> </p>
    <p>Sold by: <%= item.merchant.name %> </p>
    <% if item.active? %>
      <p>Active</p>
    <% else %>
      <p>Inactive</p>
    <% end %>
  </section>
<% end %>
