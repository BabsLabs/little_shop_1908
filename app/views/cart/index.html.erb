<h1>Cart</h1>

<% @items.each do |item, quantity|  %>
  <p><%= item.name %></p>
  <img src=<%= item.image %> >
  <p>Vendor: <%= item.merchant.name %></p>
  <p>Price: <%= item.price %></p>
  <p>Qty: <%= quantity %></p>
  <p>Subtotal: <%= item.price * quantity %></p>
<% end %>

<p>Total Amount: <%= cart.grand_total %></p>
